{
  "compilerOptions": {
    // Setting @src as alias for ./src folder, so no ../../../../../ is needed anymore
    // has to be done in eslintrc.js and next.config.js and .babelrc.js as well
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "*.js",
    "node_modules",
    "*.test.tsx"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
